<UserControl x:Class="StylusCore.App.Controls.RadialMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200" Height="200"
             Visibility="Collapsed">

    <Grid x:Name="MenuGrid">
        <!-- Background Circle -->
        <Ellipse x:Name="BackgroundCircle"
                 Fill="{DynamicResource Brush.ContentBg}"
                 Opacity="0.95"
                 Effect="{StaticResource DropShadowEffect}"/>

        <!-- Menu Items Container (positioned in code) -->
        <Canvas x:Name="ItemsCanvas"/>

        <!-- Center Button -->
        <Ellipse x:Name="CenterCircle"
                 Width="{DynamicResource Height_Button_Standard}" Height="{DynamicResource Height_Button_Standard}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Fill="{DynamicResource Brush.Surface}"
                 Stroke="{DynamicResource Brush.BorderSoft}"
                 StrokeThickness="1"/>

        <TextBlock x:Name="CenterLabel"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource Brush.TextPrimary}"
                   FontSize="{DynamicResource FontSize_Small}"
                   Text="Menu"/>
    </Grid>

    <UserControl.Resources>
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="20"
                          ShadowDepth="3"
                          Direction="270"
                          Opacity="0.3"/>

        <!-- Menu Item Style -->
        <Style x:Key="RadialMenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}"/>
            <Setter Property="Width" Value="{DynamicResource ControlHeightLG}"/>
            <Setter Property="Height" Value="{DynamicResource ControlHeightLG}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="ItemBg"
                                     Fill="{DynamicResource Brush.Surface}"
                                     Stroke="{DynamicResource Brush.BorderSoft}"
                                     StrokeThickness="1"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBg" Property="Fill"
                                        Value="{DynamicResource Brush.Accent}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>
