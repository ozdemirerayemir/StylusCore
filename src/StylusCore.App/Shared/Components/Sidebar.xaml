<UserControl x:Class="StylusCore.App.Shared.Components.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             Width="{DynamicResource Shell.SidebarCollapsedWidth}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">

    <!-- SidebarButtonStyle is now in GeneralResources.xaml (no local style needed) -->

    <!-- Ana Container: Border ile sağ çizgi -->
    <Border Background="{DynamicResource Brush.SidebarBg}"
            BorderThickness="0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="{DynamicResource Shell.SidebarItemHeight.GL}"/>  <!-- Toggle (matches Shell.SidebarItemHeight) -->
                <RowDefinition Height="*"/>   <!-- Nav Items -->
                <RowDefinition Height="{DynamicResource Shell.SidebarItemHeight.GL}"/>  <!-- Settings (matches Shell.SidebarItemHeight) -->
            </Grid.RowDefinitions>

            <!-- ROW 0: Toggle Button -->
            <Button Grid.Row="0"
                    Style="{DynamicResource SidebarButtonStyle}"
                    Click="Toggle_Click"
                    AutomationProperties.Name="Toggle Sidebar">
                <StackPanel Orientation="Horizontal">
                    <Grid Width="{DynamicResource Shell.IconSlotWidth}"
                          Height="{DynamicResource Shell.IconSlotWidth}">
                        <Grid Width="{DynamicResource Shell.IconSize}"
                              Height="{DynamicResource Shell.IconSize}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                            <Path Data="{StaticResource Icon.Menu}" 
                                  Style="{DynamicResource IconBase}"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                    <TextBlock x:Name="MenuText"
                               Text="{DynamicResource Str_Menu}"
                               VerticalAlignment="Center"
                               FontSize="{DynamicResource FontSize_Body}"
                               FontWeight="{DynamicResource FontWeight_SemiBold}"
                               Foreground="{DynamicResource Brush.TextPrimary}"
                               Visibility="Collapsed"
                               Margin="{DynamicResource Sidebar.TextMargin}"/>
                </StackPanel>
            </Button>

            <!-- ROW 1: Navigation Items -->
            <StackPanel Grid.Row="1" Margin="{DynamicResource Sidebar.ItemsMargin}">
                <!-- Library Button -->
                <Button x:Name="LibraryButton"
                        Style="{DynamicResource SidebarButtonStyle}"
                        Click="Library_Click"
                        ToolTip="{DynamicResource Str_Library}"
                        AutomationProperties.Name="Navigate to Library">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="{DynamicResource Shell.IconSlotWidth}"
                              Height="{DynamicResource Shell.IconSlotWidth}">
                            <Grid Width="{DynamicResource Shell.IconSize}"
                                  Height="{DynamicResource Shell.IconSize}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path x:Name="LibraryIcon"
                                      Data="{StaticResource Icon.Library}" 
                                      Style="{DynamicResource IconBase}"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        <TextBlock x:Name="LibraryText"
                                   Text="{DynamicResource Str_Library}"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Body}"
                                   FontWeight="{DynamicResource FontWeight_SemiBold}"
                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                   Visibility="Collapsed"
                                   Margin="{DynamicResource Sidebar.TextMargin}"/>
                    </StackPanel>
                </Button>

                <!-- Book Button (visible only when in Editor surface) -->
                <Button x:Name="BookButton" 
                        Style="{DynamicResource SidebarButtonStyle}" 
                        Command="{Binding MapsToBookListCommand}"
                        ToolTip="{DynamicResource Str_Book}"
                        AutomationProperties.Name="Navigate to Book List"
                        Visibility="{Binding IsEditorActive, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="{DynamicResource Shell.IconSlotWidth}"
                              Height="{DynamicResource Shell.IconSlotWidth}">
                            <Grid Width="{DynamicResource Shell.IconSize}"
                                  Height="{DynamicResource Shell.IconSize}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path Data="{StaticResource Icon.BooksGroup}" 
                                      Style="{DynamicResource IconBase}"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        <TextBlock x:Name="BookText"
                                   Text="{DynamicResource Str_Book}"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Body}"
                                   FontWeight="{DynamicResource FontWeight_SemiBold}"
                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                   Visibility="{Binding IsBookTextVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Margin="{DynamicResource Sidebar.TextMargin}"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- ROW 2: Settings -->
            <StackPanel Grid.Row="2">
                <Button Style="{DynamicResource SidebarButtonStyle}"
                        Click="Settings_Click"
                        ToolTip="{DynamicResource Str_Settings}"
                        AutomationProperties.Name="Navigate to Settings">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="{DynamicResource Shell.IconSlotWidth}"
                              Height="{DynamicResource Shell.IconSlotWidth}">
                            <Grid Width="{DynamicResource Shell.IconSize}"
                                  Height="{DynamicResource Shell.IconSize}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path Data="{StaticResource Icon.Settings}" 
                                      Style="{DynamicResource IconBase}"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        <TextBlock x:Name="SettingsText"
                                   Text="{DynamicResource Str_Settings}"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Body}"
                                   FontWeight="{DynamicResource FontWeight_SemiBold}"
                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                   Visibility="Collapsed"
                                   Margin="{DynamicResource Sidebar.TextMargin}"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
