<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Dark Theme Colors -->

    <!-- Background Colors -->
    <Color x:Key="PrimaryBackgroundColor">#1E1E1E</Color>
    <Color x:Key="SecondaryBackgroundColor">#252526</Color>
    <Color x:Key="TertiaryBackgroundColor">#333337</Color>
    <Color x:Key="SidebarBackgroundColor">#252526</Color>
    <Color x:Key="CanvasBackgroundColor">#1E1E1E</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#CCCCCC</Color>
    <Color x:Key="DisabledTextColor">#666666</Color>
    <Color x:Key="AccentTextColor">#4CC2FF</Color>

    <!-- Accent Colors (Brighter for Dark Mode) -->
    <Color x:Key="PrimaryAccentColor">#0078D4</Color>
    <Color x:Key="SecondaryAccentColor">#4CC2FF</Color>
    <Color x:Key="HoverAccentColor">#2B88D8</Color>
    <Color x:Key="PressedAccentColor">#004E8C</Color>

    <!-- Border Colors -->
    <Color x:Key="PrimaryBorderColor">#3F3F46</Color>
    <Color x:Key="SecondaryBorderColor">#555555</Color>
    <Color x:Key="FocusBorderColor">#0078D4</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#107C10</Color>
    <Color x:Key="WarningColor">#D29200</Color>
    <Color x:Key="ErrorColor">#FF4343</Color> <!-- Brighter Red -->
    <Color x:Key="ConflictColor">#FF4343</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="{StaticResource TertiaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="CanvasBackgroundBrush" Color="{StaticResource CanvasBackgroundColor}"/>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="{StaticResource AccentTextColor}"/>

    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{StaticResource PrimaryAccentColor}"/>
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="{StaticResource SecondaryAccentColor}"/>
    <SolidColorBrush x:Key="HoverAccentBrush" Color="{StaticResource HoverAccentColor}"/>
    <SolidColorBrush x:Key="PressedAccentBrush" Color="{StaticResource PressedAccentColor}"/>

    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="{StaticResource PrimaryBorderColor}"/>
    <SolidColorBrush x:Key="SecondaryBorderBrush" Color="{StaticResource SecondaryBorderColor}"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="{StaticResource FocusBorderColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ConflictBrush" Color="{StaticResource ConflictColor}"/>

    <!-- Typography moved to GeneralResources.xaml -->

    <!-- Sizing (Same as Light) -->
    <sys:Double x:Key="SidebarWidthExpanded">280</sys:Double>
    <sys:Double x:Key="SidebarWidthCollapsed">48</sys:Double>
    <sys:Double x:Key="RibbonHeight">120</sys:Double>
    <sys:Double x:Key="RibbonHeightCollapsed">40</sys:Double>
    <Thickness x:Key="DefaultMargin">8</Thickness>
    <Thickness x:Key="SmallMargin">4</Thickness>
    <Thickness x:Key="LargeMargin">16</Thickness>
    <CornerRadius x:Key="DefaultCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">8</CornerRadius>
    
    <!-- Button Styles (Duplicated structure but pulls new colors) -->
    <!-- Ideally, Styles should be in a separate file (e.g. Styles.xaml) that references these keys. -->
    <!-- But since current structure has them in Theme file, we duplicate them here OR we refactor styles out later. -->
    <!-- For robust architecture, I normally split "Colors" and "Styles". -->
    <!-- For now, adhering to user's "Theme File" structure request, I will copy the Style definitions. -->
    <!-- Since Styles use {StaticResource ...Brush} inside the same dictionary, they will resolve correctly here. -->

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryAccentBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource HoverAccentBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource PressedAccentBrush}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamily_Main}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize_Body}"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource SecondaryBorderBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
