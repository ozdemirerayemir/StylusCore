<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Light Theme Colors -->

    <!-- Background Colors -->
    <Color x:Key="Color.AppBg">#F5F6F8</Color>
    <Color x:Key="Color.ContentBg">#FAFAFA</Color>
    <Color x:Key="Color.Surface">#FFFFFF</Color>
    <Color x:Key="Color.SidebarBg">#FAFAFA</Color>
    <Color x:Key="Color.HoverBg">#F0F0F0</Color>

    <!-- Text Colors -->
    <Color x:Key="Color.TextPrimary">#111827</Color>
    <Color x:Key="Color.TextSecondary">#6B7280</Color>
    <Color x:Key="Color.TextTertiary">#9CA3AF</Color>
    <Color x:Key="Color.TextDisabled">#D1D5DB</Color>
    <Color x:Key="Color.TextAccent">#2563EB</Color>

    <!-- Accent Colors -->
    <Color x:Key="Color.Primary">#2563EB</Color>
    <Color x:Key="Color.PrimaryHover">#1D4ED8</Color>
    <Color x:Key="Color.PrimaryPressed">#1E40AF</Color>

    <!-- Border Colors -->
    <Color x:Key="Color.BorderSoft">#E7EAF0</Color>
    <Color x:Key="Color.BorderHard">#D1D5DB</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#107C10</Color>
    <Color x:Key="WarningColor">#FF8C00</Color>
    <Color x:Key="ErrorColor">#D13438</Color>
    <Color x:Key="ConflictColor">#E81123</Color>

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="Brush.AppBg" Color="{StaticResource Color.AppBg}"/>
    <SolidColorBrush x:Key="Brush.ContentBg" Color="{StaticResource Color.ContentBg}"/>
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="Brush.SidebarBg" Color="{StaticResource Color.SidebarBg}"/>
    <SolidColorBrush x:Key="Brush.HoverBg" Color="{StaticResource Color.HoverBg}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource Color.TextSecondary}"/>
    <SolidColorBrush x:Key="Brush.TextTertiary" Color="{StaticResource Color.TextTertiary}"/>
    <SolidColorBrush x:Key="Brush.TextDisabled" Color="{StaticResource Color.TextDisabled}"/>
    <SolidColorBrush x:Key="Brush.TextAccent" Color="{StaticResource Color.TextAccent}"/>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="Brush.PrimaryHover" Color="{StaticResource Color.PrimaryHover}"/>
    <SolidColorBrush x:Key="Brush.PrimaryPressed" Color="{StaticResource Color.PrimaryPressed}"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="Brush.BorderSoft" Color="{StaticResource Color.BorderSoft}"/>
    <SolidColorBrush x:Key="Brush.BorderHard" Color="{StaticResource Color.BorderHard}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ConflictBrush" Color="{StaticResource ConflictColor}"/>

    <!-- Typography moved to GeneralResources.xaml -->

    <!-- Sizing (Sidebar metrics moved to GeneralResources.xaml) -->
    <sys:Double x:Key="RibbonHeight">120</sys:Double>
    <sys:Double x:Key="RibbonHeightCollapsed">40</sys:Double>
    
    <!-- Mapped DEPRECATED to existing Keys until we can clean up views -->
    <Thickness x:Key="DefaultMargin">8</Thickness>
    <Thickness x:Key="SmallMargin">4</Thickness>
    <Thickness x:Key="LargeMargin">16</Thickness>
    <CornerRadius x:Key="DefaultCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">8</CornerRadius>

    <!-- Sidebar Theming Brushes -->
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="#0A000000"/>

    <!-- Icon Stroke (defaults to text color; user can override for accent icons) -->
    <SolidColorBrush x:Key="IconStrokeBrush" Color="{StaticResource Color.TextPrimary}"/>

</ResourceDictionary>
