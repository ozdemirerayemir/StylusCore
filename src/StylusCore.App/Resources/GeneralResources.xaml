<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ================================================================== -->
    <!-- TYPOGRAPHY (FONTS) -->
    <!-- ================================================================== -->
    
    <!-- 1. Font Families -->
    <FontFamily x:Key="FontFamily_Main">Segoe UI</FontFamily>
    <FontFamily x:Key="FontFamily_Monospace">Consolas</FontFamily>

    <!-- 2. Font Weights -->
    <!-- Use these instead of "Bold" or "Normal" so we can adjust globally -->
    <FontWeight x:Key="FontWeight_Light">Light</FontWeight>
    <FontWeight x:Key="FontWeight_Regular">Normal</FontWeight>
    <FontWeight x:Key="FontWeight_Medium">Medium</FontWeight>
    <FontWeight x:Key="FontWeight_SemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeight_Bold">Bold</FontWeight>

    <!-- 3. Font Sizes -->
    <sys:Double x:Key="FontSize_Small">12</sys:Double>
    <sys:Double x:Key="FontSize_Body">14</sys:Double>
    <sys:Double x:Key="FontSize_Large">16</sys:Double>
    <sys:Double x:Key="FontSize_Title">24</sys:Double>
    <sys:Double x:Key="FontSize_Header">32</sys:Double>


    <!-- ================================================================== -->
    <!-- DIMENSIONS & LAYOUT -->
    <!-- ================================================================== -->

    <!-- Corner Radii -->
    <CornerRadius x:Key="CornerRadius_Small">4</CornerRadius>
    <CornerRadius x:Key="CornerRadius_Standard">8</CornerRadius>
    <CornerRadius x:Key="CornerRadius_Large">16</CornerRadius>

    <!-- Margins / Paddings -->
    <Thickness x:Key="Margin_Small">4</Thickness>
    <Thickness x:Key="Margin_Standard">8</Thickness>
    <Thickness x:Key="Margin_Large">16</Thickness>
    <Thickness x:Key="Margin_XLarge">24</Thickness>
    <Thickness x:Key="Padding_Input">10,6</Thickness>

    <!-- Sizing -->
    <sys:Double x:Key="Size_Icon_Small">16</sys:Double>
    <sys:Double x:Key="Size_Icon_Standard">24</sys:Double>
    <sys:Double x:Key="Size_Icon_Large">32</sys:Double>
    
    <sys:Double x:Key="Height_Button_Standard">32</sys:Double>
    <sys:Double x:Key="Height_Input_Standard">32</sys:Double>

</ResourceDictionary>
