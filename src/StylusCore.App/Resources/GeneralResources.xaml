<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ================================================================== -->
    <!-- TYPOGRAPHY (FONTS) -->
    <!-- ================================================================== -->
    
    <!-- 1. Font Families -->
    <FontFamily x:Key="FontFamily_Main">Segoe UI</FontFamily>
    <FontFamily x:Key="FontFamily_Monospace">Consolas</FontFamily>

    <!-- 2. Font Weights -->
    <!-- Use these instead of "Bold" or "Normal" so we can adjust globally -->
    <FontWeight x:Key="FontWeight_Light">Light</FontWeight>
    <FontWeight x:Key="FontWeight_Regular">Normal</FontWeight>
    <FontWeight x:Key="FontWeight_Medium">Medium</FontWeight>
    <FontWeight x:Key="FontWeight_SemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeight_Bold">Bold</FontWeight>

    <!-- 3. Font Sizes -->
    <sys:Double x:Key="FontSize_Small">12</sys:Double>
    <sys:Double x:Key="FontSize_Body">14</sys:Double>
    <sys:Double x:Key="FontSize_Large">18</sys:Double>
    <sys:Double x:Key="FontSize_Title">24</sys:Double>
    <sys:Double x:Key="FontSize_Header">32</sys:Double>


    <!-- ================================================================== -->
    <!-- DIMENSIONS & LAYOUT -->
    <!-- ================================================================== -->

    <!-- Corner Radii -->
    <CornerRadius x:Key="CornerRadius_Small">4</CornerRadius>
    <CornerRadius x:Key="CornerRadius_Standard">8</CornerRadius>
    <CornerRadius x:Key="CornerRadius_Large">16</CornerRadius>

    <!-- Margins / Paddings -->
    <Thickness x:Key="Margin_Small">4</Thickness>
    <Thickness x:Key="Margin_Standard">8</Thickness>
    <Thickness x:Key="Margin_Large">16</Thickness>
    <Thickness x:Key="Margin_XLarge">24</Thickness>
    <Thickness x:Key="Padding_Input">10,6</Thickness>

    <!-- Sizing -->
    <sys:Double x:Key="Size_Icon_Small">16</sys:Double>
    <sys:Double x:Key="Size_Icon_Standard">24</sys:Double>
    <sys:Double x:Key="Size_Icon_Large">32</sys:Double>
    
    <sys:Double x:Key="Height_Button_Standard">32</sys:Double>
    <sys:Double x:Key="Height_Input_Standard">32</sys:Double>

    <!-- ================================================================== -->
    <!-- SIDEBAR METRICS                                                     -->
    <!-- ================================================================== -->

    <sys:Double x:Key="Shell.SidebarCollapsedWidth">48</sys:Double>
    <sys:Double x:Key="Shell.SidebarExpandedWidth">160</sys:Double>
    <sys:Double x:Key="Shell.SidebarItemHeight">48</sys:Double>
    <sys:Double x:Key="Shell.IconSlotWidth">48</sys:Double>
    <sys:Double x:Key="Shell.IconSize">20</sys:Double>
    <CornerRadius x:Key="Shell.SidebarCornerRadius">6</CornerRadius>

    <!-- ================================================================== -->
    <!-- SIDEBAR BUTTON STYLE (Single Source â€” colors come from theme)       -->
    <!-- ================================================================== -->

    <Style x:Key="SidebarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="{DynamicResource Shell.SidebarItemHeight}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bg"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource Shell.SidebarCornerRadius}">
                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SidebarHoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ================================================================== -->
    <!-- SECTIONS PANEL METRICS                                              -->
    <!-- ================================================================== -->

    <sys:Double x:Key="Editor.SectionsPanelDefaultWidth">250</sys:Double>
    <sys:Double x:Key="Editor.SectionsPanelMaxWidth">400</sys:Double>
    <sys:Double x:Key="Editor.SectionsPanelMinWidth">200</sys:Double>
    <sys:Double x:Key="Editor.SectionsPanelCollapsedWidth">48</sys:Double>
    <sys:Double x:Key="Editor.PageThumbnailWidth">80</sys:Double>
    <sys:Double x:Key="Editor.PageThumbnailHeight">110</sys:Double>

    <!-- ================================================================== -->
    <!-- SECTION COLORS                                                      -->
    <!-- ================================================================== -->
    <Color x:Key="Color.Section.Purple">#7C3AED</Color>
    <Color x:Key="Color.Section.Blue">#2563EB</Color>
    <Color x:Key="Color.Section.Green">#059669</Color>
    <Color x:Key="Color.Section.Yellow">#D97706</Color>
    <Color x:Key="Color.Section.Red">#DC2626</Color>
    <Color x:Key="Color.Section.Pink">#DB2777</Color>
    <Color x:Key="Color.Shadow">#000000</Color>
    
    <SolidColorBrush x:Key="Brush.Section.Purple" Color="{StaticResource Color.Section.Purple}"/>
    <SolidColorBrush x:Key="Brush.Section.Blue" Color="{StaticResource Color.Section.Blue}"/>
    <SolidColorBrush x:Key="Brush.Section.Green" Color="{StaticResource Color.Section.Green}"/>
    <SolidColorBrush x:Key="Brush.Section.Yellow" Color="{StaticResource Color.Section.Yellow}"/>
    <SolidColorBrush x:Key="Brush.Section.Red" Color="{StaticResource Color.Section.Red}"/>
    <SolidColorBrush x:Key="Brush.Section.Pink" Color="{StaticResource Color.Section.Pink}"/>

</ResourceDictionary>
