<Page x:Class="StylusCore.App.Features.Settings.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Settings"
      Background="{DynamicResource PrimaryBackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24">

            <!-- Header -->
            <TextBlock Text="{DynamicResource Str_Settings}"
                       FontSize="{DynamicResource FontSizeTitle}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       Margin="0,0,0,24"/>

            <!-- Appearance Section -->
            <TextBlock Text="{DynamicResource Str_Appearance}"
                       FontSize="{DynamicResource FontSizeLarge}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       Margin="0,0,0,16"/>

            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                    CornerRadius="{DynamicResource LargeCornerRadius}"
                    Padding="16"
                    Margin="0,0,0,24">
                <StackPanel>
                    <!-- Theme -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{DynamicResource Str_Theme}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1"
                                  SelectedValue="{Binding Theme}"
                                  SelectedValuePath="Tag">
                            <ComboBoxItem Tag="Light" Content="{DynamicResource Str_Theme_Light}"/>
                            <ComboBoxItem Tag="Dark" Content="{DynamicResource Str_Theme_Dark}"/>
                        </ComboBox>
                    </Grid>

                    <!-- Language -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{DynamicResource Str_Language}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding AvailableLanguages}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Code"
                                  SelectedValue="{Binding Language}"
                                  Width="200"
                                  HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Auto-Save Section -->
            <TextBlock Text="{DynamicResource Str_AutoSave}"
                       FontSize="{DynamicResource FontSizeLarge}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       Margin="0,0,0,16"/>

            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                    CornerRadius="{DynamicResource LargeCornerRadius}"
                    Padding="16"
                    Margin="0,0,0,24">
                <StackPanel>
                    <!-- Interval -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{DynamicResource Str_SaveInterval}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding AutoSaveInterval}"
                                 Width="100"
                                 HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Show Indicator -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{DynamicResource Str_ShowSaveIndicator}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center"/>

                        <CheckBox Grid.Column="1"
                                  IsChecked="{Binding ShowSaveIndicator}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Key Bindings Section -->
            <TextBlock Text="{DynamicResource Str_KeyBindings}"
                       FontSize="{DynamicResource FontSizeLarge}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       Margin="0,0,0,16"/>

            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                    CornerRadius="{DynamicResource LargeCornerRadius}"
                    Padding="16"
                    Margin="0,0,0,24">
                <StackPanel>
                    <!-- KeyBindings Table Header -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{DynamicResource Str_Input}" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Grid.Column="1" Text="{DynamicResource Str_Action}" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Grid.Column="2" Text="{DynamicResource Str_Modifiers}" FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </Grid>
                    
                    <Border Height="1" Background="{DynamicResource PrimaryBorderBrush}" Margin="0,0,0,8"/>
                    
                    <!-- KeyBindings List -->
                    <ItemsControl ItemsSource="{Binding KeyBindings}" MaxHeight="300">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding InputId}" 
                                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Action}"
                                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding GetDescription}"
                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Content="{DynamicResource Str_ResetDefaults}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Click="ResetBindings_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Save Button -->
            <Button Content="{DynamicResource Str_SaveSettings}"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    HorizontalAlignment="Left"
                    Click="SaveSettings_Click"/>

        </StackPanel>
    </ScrollViewer>
</Page>
