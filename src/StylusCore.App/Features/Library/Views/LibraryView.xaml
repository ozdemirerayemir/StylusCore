<Page x:Class="StylusCore.App.Features.Library.Views.LibraryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:StylusCore.Core.Enums;assembly=StylusCore.Core"
      Title="Library"
      Background="Transparent">

    <Page.Resources>
        <!-- Library Card Template (React Design) -->
        <DataTemplate x:Key="LibraryTemplate">
            <Border Width="260" MinHeight="220" Margin="0,0,16,16"
                    Background="{DynamicResource CardBackgroundBrush}"
                    CornerRadius="{DynamicResource Library.CardCornerRadius}"
                    Cursor="Hand"
                    MouseLeftButtonUp="LibraryCard_Click"
                    Tag="{Binding}"
                    ClipToBounds="True">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.06" BlurRadius="12"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="96"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ── COVER (Gradient) ── -->
                    <Border Grid.Row="0"
                            CornerRadius="{DynamicResource Library.CardTopCornerRadius}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Orange}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Purple">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Purple}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Blue">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Blue}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Green">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Green}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Yellow">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Yellow}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Red">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Red}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Pink">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Pink}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Orange">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Orange}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Teal">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Teal}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <!-- Rounded-square icon container -->
                        <Border Width="40" Height="40"
                                CornerRadius="10"
                                Background="{DynamicResource Solid.White33}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="16,16,0,0">
                            <Grid Width="20" Height="20"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path Data="{StaticResource Icon.Book}"
                                      Style="{DynamicResource IconBase}"
                                      Stroke="{DynamicResource Solid.White}"
                                      StrokeThickness="1.5"
                                      Stretch="Uniform"/>
                            </Grid>
                        </Border>
                    </Border>

                    <!-- ── INFO AREA ── -->
                    <Grid Grid.Row="1" Margin="16,14,16,14">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Name -->
                        <TextBlock Grid.Row="0"
                                   Text="{Binding Name}"
                                   FontWeight="SemiBold"
                                   FontSize="{DynamicResource FontSize_Body}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   TextTrimming="CharacterEllipsis"/>

                        <!-- Notebook count -->
                        <TextBlock Grid.Row="1"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="0,4,0,0">
                            <Run Text="{Binding Notebooks.Count, Mode=OneWay}"/>
                            <Run Text=" "/><Run Text="{DynamicResource Str_NotebooksCount}"/>
                        </TextBlock>

                        <!-- Bottom row: Clock + time | ⋯ button -->
                        <Border Grid.Row="3"
                                BorderBrush="{DynamicResource PrimaryBorderBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
    
                                <!-- Clock + "Just now" -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <Grid Width="14" Height="14" Margin="0,0,5,0">
                                        <Path Data="{StaticResource Icon.Clock}"
                                              Style="{DynamicResource IconBase}"
                                              Stroke="{DynamicResource TertiaryTextBrush}"
                                              StrokeThickness="1.5"
                                              Stretch="Uniform"
                                              Width="12" Height="12"/>
                                    </Grid>
                                    <TextBlock Text="{DynamicResource Str_JustNow}"
                                               FontSize="{DynamicResource FontSize_Small}"
                                               Foreground="{DynamicResource TertiaryTextBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
    
                                <!-- ⋯ Options Button -->
                                <Button Grid.Column="1"
                                        Width="28" Height="28"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0"
                                        Cursor="Hand"
                                        Click="NotebookOptions_Click"
                                        Tag="{Binding}">
                                    <Grid Width="16" Height="16">
                                        <Path Data="{StaticResource Icon.MoreHorizontal}"
                                              Style="{DynamicResource IconBase}"
                                              Fill="{DynamicResource SecondaryTextBrush}"
                                              Stretch="Uniform"
                                              Width="16" Height="4"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                    <Button.ContextMenu>
                                        <ContextMenu Padding="0,4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryBorderBrush}">
                                            <!-- COVER COLOR Label -->
                                            <MenuItem Header="{DynamicResource Str_CoverColor}" 
                                                      Foreground="{DynamicResource TertiaryTextBrush}"
                                                      FontSize="10"
                                                      FontWeight="Bold"
                                                      IsHitTestVisible="False"
                                                      Padding="12,4,12,0"
                                                      StaysOpenOnClick="True"/>
                                            
                                            <!-- Color Picker Row -->
                                            <MenuItem StaysOpenOnClick="True" Padding="8,4">
                                                <MenuItem.Header>
                                                    <StackPanel Orientation="Horizontal" Margin="4,4,4,0">
                                                        <Button Width="24" Height="24" Margin="0,0,8,0" Style="{DynamicResource IconButtonStyle}" Background="{DynamicResource NotebookCoverBrush_Pink}" DataContext="{x:Static sys:CoverColor.Pink}" Click="ChangeLibraryColor_Click">
                                                            <Button.Template>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="12"/>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button Width="24" Height="24" Margin="0,0,8,0" Style="{DynamicResource IconButtonStyle}" Background="{DynamicResource NotebookCoverBrush_Blue}" DataContext="{x:Static sys:CoverColor.Blue}" Click="ChangeLibraryColor_Click">
                                                            <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="12"/></ControlTemplate></Button.Template>
                                                        </Button>
                                                        <Button Width="24" Height="24" Margin="0,0,8,0" Style="{DynamicResource IconButtonStyle}" Background="{DynamicResource NotebookCoverBrush_Teal}" DataContext="{x:Static sys:CoverColor.Teal}" Click="ChangeLibraryColor_Click">
                                                            <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="12"/></ControlTemplate></Button.Template>
                                                        </Button>
                                                        <Button Width="24" Height="24" Margin="0,0,8,0" Style="{DynamicResource IconButtonStyle}" Background="{DynamicResource NotebookCoverBrush_Purple}" DataContext="{x:Static sys:CoverColor.Purple}" Click="ChangeLibraryColor_Click">
                                                            <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="12"/></ControlTemplate></Button.Template>
                                                        </Button>
                                                        <Button Width="24" Height="24" Margin="0,0,8,0" Style="{DynamicResource IconButtonStyle}" Background="{DynamicResource NotebookCoverBrush_Orange}" DataContext="{x:Static sys:CoverColor.Orange}" Click="ChangeLibraryColor_Click">
                                                            <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="12"/></ControlTemplate></Button.Template>
                                                        </Button>
                                                        <Button Width="24" Height="24" Margin="0,0,0,0" Style="{DynamicResource IconButtonStyle}" Background="{DynamicResource NotebookCoverBrush_Yellow}" DataContext="{x:Static sys:CoverColor.Yellow}" Click="ChangeLibraryColor_Click">
                                                            <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="12"/></ControlTemplate></Button.Template>
                                                        </Button>
                                                    </StackPanel>
                                                </MenuItem.Header>
                                            </MenuItem>

                                            <Separator Margin="12,4"/>

                                            <!-- Rename -->
                                            <MenuItem Header="{DynamicResource Str_Rename}" Click="RenameLibrary_Click">
                                                <MenuItem.Icon>
                                                    <Path Data="{StaticResource Icon.Edit}" Style="{DynamicResource IconBase}" Stroke="{DynamicResource SecondaryTextBrush}" Stretch="Uniform" Width="14" Height="14"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            
                                            <!-- Delete -->
                                            <MenuItem Header="{DynamicResource Str_Delete}" Click="DeleteLibrary_Click" Foreground="{DynamicResource ErrorBrush}">
                                                <MenuItem.Icon>
                                                    <Path Data="{StaticResource Icon.Trash}" Style="{DynamicResource IconBase}" Stroke="{DynamicResource ErrorBrush}" Stretch="Uniform" Width="14" Height="14"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

            </Border>
        </DataTemplate>

    </Page.Resources>

    <Grid Margin="{DynamicResource Library.ContentPadding}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header/Toolbar -->
            <RowDefinition Height="*"/>     <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ============================================================ -->
        <!-- TOOLBAR                                                       -->
        <!-- ============================================================ -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>  <!-- Title -->
                <ColumnDefinition Width="Auto"/>  <!-- View Toggle -->
                <ColumnDefinition Width="*"/>     <!-- Search (centered, flexible) -->
                <ColumnDefinition Width="Auto"/>  <!-- Sort -->
                <ColumnDefinition Width="Auto"/>  <!-- + New -->
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock x:Name="PageTitle"
                       Grid.Column="0"
                       Text="{DynamicResource Str_Library}"
                       FontSize="{DynamicResource FontSize_Title}"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       VerticalAlignment="Center"
                       Margin="0,0,16,0"/>

            <!-- View Mode Toggle (Grid / List) -->
            <Border Grid.Column="1"
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    CornerRadius="8"
                    Padding="2"
                    VerticalAlignment="Center"
                    Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="GridViewToggle"
                                 Style="{DynamicResource SegmentedToggleStyle}"
                                 IsChecked="True"
                                 GroupName="ViewMode"
                                 ToolTip="{DynamicResource Str_GridView}">
                        <Grid Width="16" Height="16">
                            <Path Data="{StaticResource Icon.LayoutGrid}"
                                  Style="{DynamicResource IconBase}"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                  StrokeThickness="1.5"
                                  Stretch="Uniform" Width="14" Height="14"/>
                        </Grid>
                    </RadioButton>
                    <RadioButton x:Name="ListViewToggle"
                                 Style="{DynamicResource SegmentedToggleStyle}"
                                 GroupName="ViewMode"
                                 ToolTip="{DynamicResource Str_ListView}">
                        <Grid Width="16" Height="16">
                            <Path Data="{StaticResource Icon.List}"
                                  Style="{DynamicResource IconBase}"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                  StrokeThickness="1.5"
                                  Stretch="Uniform" Width="14" Height="14"/>
                        </Grid>
                    </RadioButton>
                </StackPanel>
            </Border>

            <!-- Search Box (centered in flexible column) -->
            <TextBox x:Name="SearchBox"
                     Grid.Column="2"
                     Style="{DynamicResource SearchBoxStyle}"
                     Tag="{DynamicResource Str_SearchLibraries}"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>

            <!-- Sort Button -->
            <ToggleButton x:Name="SortToggle"
                          Grid.Column="3"
                          Style="{DynamicResource SortToggleButtonStyle}"
                          VerticalAlignment="Center"
                          Margin="12,0"
                          ToolTip="{DynamicResource Str_SortBy}">
                <Grid Width="16" Height="16">
                    <Path Data="{StaticResource Icon.ArrowUpDown}"
                          Style="{DynamicResource IconBase}"
                          StrokeThickness="1.5"
                          Stretch="Uniform" Width="14" Height="14"/>
                </Grid>
            </ToggleButton>

            <!-- + New Library / Notebook Button -->
            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="NewLibraryButton"
                        Content="{DynamicResource Str_NewLibrary}"
                        Style="{DynamicResource TonalButtonStyle}"
                        Click="NewLibrary_Click"/>
                <Button x:Name="NewNotebookButton"
                        Content="{DynamicResource Str_NewBook}"
                        Style="{DynamicResource TonalButtonStyle}"
                        Click="NewNotebook_Click"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <!-- Libraries Grid (visible when no library selected) -->
        <ScrollViewer x:Name="LibrariesScrollViewer"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

            <ItemsControl x:Name="LibrariesList"
                          ItemsSource="{Binding Libraries}"
                          ItemTemplate="{StaticResource LibraryTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Notebooks Grid (visible when a library is selected) -->
        <ScrollViewer x:Name="NotebooksScrollViewer"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Visibility="Collapsed">

            <ItemsControl x:Name="NotebooksList"
                          ItemsSource="{Binding SelectedLibrary.Notebooks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Notebook Card (Nebo style - colored cover) -->
                        <Border x:Name="NotebookCard"
                                CornerRadius="{DynamicResource LargeCornerRadius}"
                                Width="160"
                                Height="200"
                                Margin="0,0,16,16"
                                Cursor="Hand"
                                MouseLeftButtonUp="NotebookCard_Click"
                                Tag="{Binding}">
                            
                            <!-- Dynamic background based on CoverColor -->
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Purple}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Purple">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Purple}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Blue">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Blue}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Green">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Green}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Yellow">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Yellow}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Red">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Red}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Pink">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Pink}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Orange">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Orange}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Teal">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Teal}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <!-- Context Menu logic handled by Button inside, but keeping Border ContextMenu as fallback or alternative -->
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Three Dots Menu Button (Top Right) -->
                                <Button Grid.Row="0"
                                        HorizontalAlignment="Right"
                                        Margin="0,8,8,0"
                                        Width="24" Height="24"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0"
                                        Click="NotebookOptions_Click"
                                        Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                            <!-- Additional triggers if needed -->
                                        </Style>
                                    </Button.Style>
                                    <Grid Width="16" Height="16">
                                        <Path Data="{StaticResource Icon.Settings}" Style="{StaticResource IconBase}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                    <Button.ContextMenu>
                                        <ContextMenu x:Name="NotebookContextMenu">
                                            <!-- Command binding reaches LibraryViewModel via the Page's DataContext -->
                                            <!-- PlacementTarget is the Button, Button.Tag holds the Notebook -->
                                            <MenuItem Header="{DynamicResource Str_Rename}" 
                                                      Command="{Binding DataContext.RenameNotebookCommand, Source={x:Reference NotebooksList}}"
                                                      CommandParameter="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <MenuItem Header="{DynamicResource Str_ChangeColor}" Click="ChangeNotebookColor_Click"/>
                                            <Separator/>
                                            <MenuItem Header="{DynamicResource Str_Delete}" 
                                                      Command="{Binding DataContext.DeleteNotebookCommand, Source={x:Reference NotebooksList}}"
                                                      CommandParameter="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      Foreground="{DynamicResource ErrorBrush}"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                
                                <!-- Notebook Information Area -->
                                
                                <!-- Notebook Cover Design -->
                                <Border Grid.Row="1" Margin="8,8,8,0">
                                    <!-- Simple book lines decoration -->
                                    <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,8">
                                        <Border Height="2" Background="{DynamicResource Solid.White}" Opacity="0.3" Margin="0,4"/>
                                        <Border Height="2" Background="{DynamicResource Solid.White}" Opacity="0.3" Margin="0,4"/>
                                        <Border Height="2" Background="{DynamicResource Solid.White}" Opacity="0.3" Margin="0,4"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Notebook Info -->
                                <Border Grid.Row="1" 
                                        Background="{DynamicResource SecondaryBackgroundBrush}" 
                                        CornerRadius="0,0,8,8"
                                        Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="{DynamicResource FontSize_Body}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="{DynamicResource FontSize_Small}"
                                                   Foreground="{DynamicResource SecondaryTextBrush}">
                                            <Run Text="{Binding Pages.Count, Mode=OneWay}"/>
                                            <Run Text=" "/><Run Text="{DynamicResource Str_PagesCount}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State for Libraries -->
        <StackPanel x:Name="EmptyLibrariesState"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <!-- Circular Icon Container -->
            <Border Width="{DynamicResource EmptyState.IconContainerSize}"
                    Height="{DynamicResource EmptyState.IconContainerSize}"
                    CornerRadius="48"
                    Background="{DynamicResource SecondaryBackgroundBrush}">
                <Grid Width="{DynamicResource EmptyState.IconSize}"
                      Height="{DynamicResource EmptyState.IconSize}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Path Data="{StaticResource Icon.Library}"
                          Style="{DynamicResource IconBase}"
                          Stroke="{DynamicResource TertiaryTextBrush}"
                          StrokeThickness="1.5"
                          Stretch="Uniform"/>
                </Grid>
            </Border>
            <TextBlock Text="{DynamicResource Str_NoLibraries}"
                       FontSize="{DynamicResource FontSize_Large}"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
            <TextBlock Text="{DynamicResource Str_CreateFirstLibrary}"
                       FontSize="{DynamicResource FontSize_Small}"
                       Foreground="{DynamicResource TertiaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
            <Button Content="{DynamicResource Str_NewLibrary}"
                    Style="{DynamicResource TonalButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="NewLibrary_Click"/>
        </StackPanel>
        
        <!-- Empty State for Notebooks -->
        <StackPanel x:Name="EmptyNotebooksState"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <Border Width="{DynamicResource EmptyState.IconContainerSize}"
                    Height="{DynamicResource EmptyState.IconContainerSize}"
                    CornerRadius="48"
                    Background="{DynamicResource SecondaryBackgroundBrush}">
                <Grid Width="{DynamicResource EmptyState.IconSize}"
                      Height="{DynamicResource EmptyState.IconSize}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Path Data="{StaticResource Icon.Book}"
                          Style="{DynamicResource IconBase}"
                          Stroke="{DynamicResource TertiaryTextBrush}"
                          StrokeThickness="1.5"
                          Stretch="Uniform"/>
                </Grid>
            </Border>
            <TextBlock Text="{DynamicResource Str_NoNotebooks}"
                       FontSize="{DynamicResource FontSize_Large}"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
            <TextBlock Text="{DynamicResource Str_CreateFirstNotebook}"
                       FontSize="{DynamicResource FontSize_Small}"
                       Foreground="{DynamicResource TertiaryTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
            <Button Content="{DynamicResource Str_NewNotebook}"
                    Style="{DynamicResource TonalButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="NewNotebook_Click"/>
        </StackPanel>
    </Grid>
</Page>
