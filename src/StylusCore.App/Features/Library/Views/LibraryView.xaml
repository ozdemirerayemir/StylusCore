<Page x:Class="StylusCore.App.Features.Library.Views.LibraryView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:StylusCore.Core.Enums;assembly=StylusCore.Core"
      Title="Library"
      Background="Transparent">

    <Page.Resources>
        <!-- Library Card Template (React Design) -->
        <DataTemplate x:Key="LibraryTemplate">
            <Border Width="{DynamicResource Library.CardWidth}" MinHeight="{DynamicResource Library.CardMinHeight}" Margin="0,0,24,24"
                    Background="{DynamicResource Brush.Surface}"
                    BorderBrush="{DynamicResource Brush.BorderSoft}"
                    BorderThickness="1"
                    CornerRadius="{DynamicResource RadiusLG}"
                    Cursor="Hand"
                    MouseLeftButtonUp="LibraryCard_Click"
                    Tag="{Binding}"
                    ClipToBounds="True">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="0" Opacity="0.03" BlurRadius="15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{DynamicResource Library.CoverHeight.GL}"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ── COVER (Gradient) ── -->
                    <Border Grid.Row="0"
                            CornerRadius="{DynamicResource Library.CardTopCornerRadius}"> <!-- Need static inner top radius, using literal for now or new token later -->
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Orange}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Purple">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Purple}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Blue">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Blue}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Green">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Green}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Yellow">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Yellow}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Red">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Red}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Pink">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Pink}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Orange">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Orange}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CoverColor}" Value="Teal">
                                        <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Teal}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <!-- Rounded-square icon container -->
                        <Border Width="{DynamicResource ControlHeightMD}" Height="{DynamicResource ControlHeightMD}"
                                CornerRadius="{DynamicResource RadiusSM}"
                                Background="{DynamicResource Solid.White33}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="{DynamicResource Spacing16}">
                            <Grid Width="{DynamicResource Size_Icon_Small}" Height="{DynamicResource Size_Icon_Small}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path Data="{StaticResource Icon.Book}"
                                      Style="{DynamicResource IconBase}"
                                      Stroke="{DynamicResource Solid.White}"
                                      StrokeThickness="1.5"
                                      Stretch="Uniform"/>
                            </Grid>
                        </Border>
                    </Border>

                    <!-- ── INFO AREA ── -->
                    <Grid Grid.Row="1" Margin="16,14,16,14">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Name -->
                        <TextBlock Grid.Row="0"
                                   Text="{Binding Name}"
                                   FontWeight="{DynamicResource FontWeight_SemiBold}"
                                   FontSize="{DynamicResource FontSize_Body}"
                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                   TextTrimming="CharacterEllipsis"/>

                        <!-- Notebook count -->
                        <TextBlock Grid.Row="1"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Foreground="{DynamicResource Brush.TextSecondary}"
                                   Margin="0,4,0,0">
                            <Run Text="{Binding Notebooks.Count, Mode=OneWay}"/>
                            <Run Text=" "/><Run Text="{DynamicResource Str_NotebooksCount}"/>
                        </TextBlock>

                        <!-- Bottom row: Clock + time | ⋯ button -->
                        <Border Grid.Row="3"
                                BorderBrush="{DynamicResource Brush.BorderHard}"
                                BorderThickness="0,1,0,0"
                                Padding="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
    
                                <!-- Clock + "Just now" -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <Grid Width="14" Height="14" Margin="0,0,5,0">
                                        <Path Data="{StaticResource Icon.Clock}"
                                              Style="{DynamicResource IconBase}"
                                              Stroke="{DynamicResource Brush.TextTertiary}"
                                              StrokeThickness="1.5"
                                              Stretch="Uniform"
                                              Width="12" Height="12"/>
                                    </Grid>
                                    <TextBlock Text="{DynamicResource Str_JustNow}"
                                               FontSize="{DynamicResource FontSize_Small}"
                                               Foreground="{DynamicResource Brush.TextTertiary}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
    
                                <!-- ⋯ Options Button -->
                                <Button Grid.Column="1"
                                        Width="28" Height="28"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0"
                                        Cursor="Hand"
                                        Click="NotebookOptions_Click"
                                        Tag="{Binding}">
                                    <Grid Width="16" Height="16">
                                        <Path Data="{StaticResource Icon.MoreHorizontal}"
                                              Style="{DynamicResource IconBase}"
                                              Fill="{DynamicResource Brush.TextSecondary}"
                                              Stretch="Uniform"
                                              Width="16" Height="4"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Grid>
                                    <Button.ContextMenu>
                                        <ContextMenu Padding="{DynamicResource Spacing8}">
                                            <!-- COVER COLOR Label -->
                                            <MenuItem Header="{DynamicResource Str_CoverColor}" 
                                                      Foreground="{DynamicResource Brush.TextTertiary}"
                                                      FontSize="{DynamicResource FontSize_Small}"
                                                      FontWeight="{DynamicResource FontWeight_Bold}"
                                                      IsHitTestVisible="False"
                                                      Padding="4,0,4,4"
                                                      StaysOpenOnClick="True">
                                                <MenuItem.Template>
                                                    <!-- Sadece başlık gibi görünmesini sağlamak için basit bir template -->
                                                    <ControlTemplate TargetType="MenuItem">
                                                        <Border Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter ContentSource="Header"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </MenuItem.Template>
                                            </MenuItem>
                                            
                                            <!-- Color Picker Row -->
                                            <MenuItem StaysOpenOnClick="True">
                                                <MenuItem.Template>
                                                    <ControlTemplate TargetType="MenuItem">
                                                        <Border Padding="4,4,4,8">
                                                            <StackPanel Orientation="Horizontal">
                                                                <Button Width="20" Height="20" Margin="0,0,8,0" Background="{DynamicResource NotebookCoverBrush_Pink}" DataContext="{x:Static sys:CoverColor.Pink}" Click="ChangeLibraryColor_Click" Cursor="Hand" ToolTip="{DynamicResource Str_Color_Pink}">
                                                                    <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="1" BorderBrush="{DynamicResource Brush.BorderHard}"/></ControlTemplate></Button.Template>
                                                                </Button>
                                                                <Button Width="20" Height="20" Margin="0,0,8,0" Background="{DynamicResource NotebookCoverBrush_Blue}" DataContext="{x:Static sys:CoverColor.Blue}" Click="ChangeLibraryColor_Click" Cursor="Hand" ToolTip="{DynamicResource Str_Color_Blue}">
                                                                    <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="1" BorderBrush="{DynamicResource Brush.BorderHard}"/></ControlTemplate></Button.Template>
                                                                </Button>
                                                                <Button Width="20" Height="20" Margin="0,0,8,0" Background="{DynamicResource NotebookCoverBrush_Teal}" DataContext="{x:Static sys:CoverColor.Teal}" Click="ChangeLibraryColor_Click" Cursor="Hand" ToolTip="{DynamicResource Str_Color_Teal}">
                                                                    <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="1" BorderBrush="{DynamicResource Brush.BorderHard}"/></ControlTemplate></Button.Template>
                                                                </Button>
                                                                <Button Width="20" Height="20" Margin="0,0,8,0" Background="{DynamicResource NotebookCoverBrush_Purple}" DataContext="{x:Static sys:CoverColor.Purple}" Click="ChangeLibraryColor_Click" Cursor="Hand" ToolTip="{DynamicResource Str_Color_Purple}">
                                                                    <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="1" BorderBrush="{DynamicResource Brush.BorderHard}"/></ControlTemplate></Button.Template>
                                                                </Button>
                                                                <Button Width="20" Height="20" Margin="0,0,8,0" Background="{DynamicResource NotebookCoverBrush_Orange}" DataContext="{x:Static sys:CoverColor.Orange}" Click="ChangeLibraryColor_Click" Cursor="Hand" ToolTip="{DynamicResource Str_Color_Orange}">
                                                                    <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="1" BorderBrush="{DynamicResource Brush.BorderHard}"/></ControlTemplate></Button.Template>
                                                                </Button>
                                                                <Button Width="20" Height="20" Margin="0,0,0,0" Background="{DynamicResource NotebookCoverBrush_Yellow}" DataContext="{x:Static sys:CoverColor.Yellow}" Click="ChangeLibraryColor_Click" Cursor="Hand" ToolTip="{DynamicResource Str_Color_Yellow}">
                                                                    <Button.Template><ControlTemplate TargetType="Button"><Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="1" BorderBrush="{DynamicResource Brush.BorderHard}"/></ControlTemplate></Button.Template>
                                                                </Button>
                                                            </StackPanel>
                                                        </Border>
                                                    </ControlTemplate>
                                                </MenuItem.Template>
                                            </MenuItem>

                                            <!-- Slider - Simulated just for aesthetics matching React UI currently, functionally it might adjust brightness/saturation if implemented later -->
                                            <MenuItem IsHitTestVisible="False">
                                                <MenuItem.Template>
                                                    <ControlTemplate TargetType="MenuItem">
                                                        <Border Padding="4,4,4,8">
                                                            <Grid Height="6">
                                                                <Border Background="{DynamicResource Brush.AppBg}" CornerRadius="3"/>
                                                                <Border Background="{DynamicResource Brush.TextSecondary}" CornerRadius="3" Width="40" HorizontalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </MenuItem.Template>
                                            </MenuItem>

                                            <Separator/>

                                            <!-- Rename -->
                                            <MenuItem Header="{DynamicResource Str_Rename}" Click="RenameLibrary_Click">
                                                <MenuItem.Icon>
                                                    <Path Data="{StaticResource Icon.Edit}" Style="{DynamicResource IconBase}" Stroke="{DynamicResource Brush.TextSecondary}" Stretch="Uniform" Width="16" Height="16"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            
                                            <!-- Delete -->
                                            <MenuItem Header="{DynamicResource Str_Delete}" Click="DeleteLibrary_Click" Foreground="{DynamicResource ErrorBrush}">
                                                <MenuItem.Icon>
                                                    <Path Data="{StaticResource Icon.Trash}" Style="{DynamicResource IconBase}" Stroke="{DynamicResource ErrorBrush}" Stretch="Uniform" Width="16" Height="16"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

            </Border>
        </DataTemplate>

    </Page.Resources>

    <Grid Margin="{DynamicResource Library.PageMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header/Toolbar -->
            <RowDefinition Height="*"/>     <!-- Content -->
        </Grid.RowDefinitions>

        <!-- ============================================================ -->
        <!-- TOOLBAR / HEADER (Web Geometry)                               -->
        <!-- ============================================================ -->
        <Grid Grid.Row="0" Margin="0,0,0,24" Height="{DynamicResource Library.HeaderHeight}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>     <!-- Left: Title -->
                <ColumnDefinition Width="Auto"/>  <!-- Center: Main Controls -->
                <ColumnDefinition Width="*"/>     <!-- Right: Actions -->
            </Grid.ColumnDefinitions>

            <!-- 1. LEFT: Title -->
            <TextBlock x:Name="PageTitle"
                       Grid.Column="0"
                       Text="{DynamicResource Str_Library}"
                       FontSize="{DynamicResource FontSize_Title}"
                       FontWeight="{DynamicResource FontWeight_Bold}"
                       Foreground="{DynamicResource Brush.TextPrimary}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>

            <!-- 2. CENTER: View Mode + Search + Sort (Absolute Center) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <!-- View Mode Toggle -->
                <Border Background="{DynamicResource Brush.ContentBg}"
                        CornerRadius="{DynamicResource RadiusSM}"
                        Padding="2"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="GridViewToggle"
                                     Style="{DynamicResource SegmentedToggleStyle}"
                                     IsChecked="True"
                                     GroupName="ViewMode"
                                     ToolTip="{DynamicResource Str_GridView}">
                            <Grid Width="16" Height="16">
                                <Path Data="{StaticResource Icon.LayoutGrid}"
                                      Style="{DynamicResource IconBase}"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                      StrokeThickness="1.5"
                                      Stretch="Uniform" Width="14" Height="14"/>
                            </Grid>
                        </RadioButton>
                        <RadioButton x:Name="ListViewToggle"
                                     Style="{DynamicResource SegmentedToggleStyle}"
                                     GroupName="ViewMode"
                                     ToolTip="{DynamicResource Str_ListView}">
                            <Grid Width="16" Height="16">
                                <Path Data="{StaticResource Icon.List}"
                                      Style="{DynamicResource IconBase}"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"
                                      StrokeThickness="1.5"
                                      Stretch="Uniform" Width="14" Height="14"/>
                            </Grid>
                        </RadioButton>
                    </StackPanel>
                </Border>

                <!-- Search Box -->
                <TextBox x:Name="SearchBox"
                         Style="{DynamicResource SearchBoxStyle}"
                         Width="{DynamicResource SearchBox.Width}"
                         Height="{DynamicResource ControlHeightMD}"
                         Margin="{DynamicResource Spacing24_Horizontal}"
                         Tag="{DynamicResource Str_SearchLibraries}"
                         VerticalAlignment="Center"/>

                <!-- Sort Button -->
                <ToggleButton x:Name="SortToggle"
                              Style="{DynamicResource SortToggleButtonStyle}"
                              Height="{DynamicResource ControlHeightMD}"
                              Width="{DynamicResource ControlHeightMD}"
                              VerticalAlignment="Center"
                              ToolTip="{DynamicResource Str_SortBy}">
                    <Grid Width="16" Height="16">
                        <Path Data="{StaticResource Icon.ArrowUpDown}"
                              Style="{DynamicResource IconBase}"
                              StrokeThickness="1.5"
                              Stretch="Uniform" Width="14" Height="14"/>
                    </Grid>
                </ToggleButton>
            </StackPanel>

            <!-- 3. RIGHT: Actions (Primary Button) -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button x:Name="NewNotebookButton"
                        Content="{DynamicResource Str_NewBook}"
                        Style="{DynamicResource TonalButtonStyle}"
                        Height="{DynamicResource ControlHeightMD}"
                        Margin="0,0,12,0"
                        Click="NewNotebook_Click"
                        Visibility="Collapsed"/>
                
                <!-- Primary Action Button (Strong Web Weight) -->
                <Button x:Name="NewLibraryButton"
                        Content="{DynamicResource Str_NewLibrary}"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Height="{DynamicResource ControlHeightMD}"
                        Padding="{DynamicResource Spacing24_Horizontal}"
                        Click="NewLibrary_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="{DynamicResource RadiusMD}"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Libraries Grid (visible when no library selected) -->
        <ScrollViewer x:Name="LibrariesScrollViewer"
                      Grid.Row="1"
                      Background="{DynamicResource Brush.ContentBg}"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

            <ItemsControl x:Name="LibrariesList"
                          ItemsSource="{Binding Libraries}"
                          ItemTemplate="{StaticResource LibraryTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Notebooks Grid (visible when a library is selected) -->
        <ScrollViewer x:Name="NotebooksScrollViewer"
                      Grid.Row="1"
                      Background="{DynamicResource Brush.ContentBg}"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Visibility="Collapsed">

            <ItemsControl x:Name="NotebooksList"
                          ItemsSource="{Binding SelectedLibrary.Notebooks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Notebook Card (Nebo style - colored cover) -->
                        <Border x:Name="NotebookCard"
                                CornerRadius="{DynamicResource RadiusTG}"
                                Width="{DynamicResource Library.CardWidth}"
                                Height="{DynamicResource Library.CardMinHeight}"
                                Margin="0,0,16,16"
                                Cursor="Hand"
                                MouseLeftButtonUp="NotebookCard_Click"
                                Tag="{Binding}">
                            
                            <!-- Dynamic background based on CoverColor -->
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Purple}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Purple">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Purple}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Blue">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Blue}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Green">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Green}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Yellow">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Yellow}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Red">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Red}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Pink">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Pink}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Orange">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Orange}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CoverColor}" Value="Teal">
                                            <Setter Property="Background" Value="{DynamicResource NotebookCoverBrush_Teal}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            
                            <!-- Context Menu logic handled by Button inside, but keeping Border ContextMenu as fallback or alternative -->
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Three Dots Menu Button (Top Right) -->
                                <Button Grid.Row="0"
                                        HorizontalAlignment="Right"
                                        Margin="0,8,8,0"
                                        Width="24" Height="24"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0"
                                        Click="NotebookOptions_Click"
                                        Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                            <!-- Additional triggers if needed -->
                                        </Style>
                                    </Button.Style>
                                    <Grid Width="16" Height="16">
                                        <Path Data="{StaticResource Icon.Settings}" Style="{StaticResource IconBase}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                    <Button.ContextMenu>
                                        <ContextMenu x:Name="NotebookContextMenu">
                                            <!-- Command binding reaches LibraryViewModel via the Page's DataContext -->
                                            <!-- PlacementTarget is the Button, Button.Tag holds the Notebook -->
                                            <MenuItem Header="{DynamicResource Str_Rename}" 
                                                      Command="{Binding DataContext.RenameNotebookCommand, Source={x:Reference NotebooksList}}"
                                                      CommandParameter="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <MenuItem Header="{DynamicResource Str_ChangeColor}" Click="ChangeNotebookColor_Click"/>
                                            <Separator/>
                                            <MenuItem Header="{DynamicResource Str_Delete}" 
                                                      Command="{Binding DataContext.DeleteNotebookCommand, Source={x:Reference NotebooksList}}"
                                                      CommandParameter="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      Foreground="{DynamicResource ErrorBrush}"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                                
                                <!-- Notebook Information Area -->
                                
                                <!-- Notebook Cover Design -->
                                <Border Grid.Row="1" Margin="8,8,8,0">
                                    <!-- Simple book lines decoration -->
                                    <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,8">
                                        <Border Height="2" Background="{DynamicResource Solid.White}" Opacity="0.3" Margin="0,4"/>
                                        <Border Height="2" Background="{DynamicResource Solid.White}" Opacity="0.3" Margin="0,4"/>
                                        <Border Height="2" Background="{DynamicResource Solid.White}" Opacity="0.3" Margin="0,4"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Notebook Info -->
                                <Border Grid.Row="1" 
                                        Background="{DynamicResource Brush.ContentBg}" 
                                        CornerRadius="0,0,8,8"
                                        Padding="8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="{DynamicResource FontSize_Body}"
                                                   FontWeight="{DynamicResource FontWeight_SemiBold}"
                                                   Foreground="{DynamicResource Brush.TextPrimary}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="{DynamicResource FontSize_Small}"
                                                   Foreground="{DynamicResource Brush.TextSecondary}">
                                            <Run Text="{Binding Pages.Count, Mode=OneWay}"/>
                                            <Run Text=" "/><Run Text="{DynamicResource Str_PagesCount}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State for Libraries -->
        <StackPanel x:Name="EmptyLibrariesState"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <!-- Circular Icon Container -->
            <Border Width="{DynamicResource EmptyState.IconContainerSize}"
                    Height="{DynamicResource EmptyState.IconContainerSize}"
                    CornerRadius="48"
                    Background="{DynamicResource Brush.AppBg}">
                <Grid Width="{DynamicResource EmptyState.IconSize}"
                      Height="{DynamicResource EmptyState.IconSize}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Path Data="{StaticResource Icon.Library}"
                          Style="{DynamicResource IconBase}"
                          Stroke="{DynamicResource Brush.TextTertiary}"
                          StrokeThickness="1.5"
                          Stretch="Uniform"/>
                </Grid>
            </Border>
            <TextBlock Text="{DynamicResource Str_NoLibraries}"
                       FontSize="{DynamicResource FontSize_Large}"
                       Foreground="{DynamicResource Brush.TextSecondary}"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
            <TextBlock Text="{DynamicResource Str_CreateFirstLibrary}"
                       FontSize="{DynamicResource FontSize_Small}"
                       Foreground="{DynamicResource Brush.TextTertiary}"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
            <Button Content="{DynamicResource Str_NewLibrary}"
                    Style="{DynamicResource TonalButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="NewLibrary_Click"/>
        </StackPanel>
        
        <!-- Empty State for Notebooks -->
        <StackPanel x:Name="EmptyNotebooksState"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <Border Width="{DynamicResource EmptyState.IconContainerSize}"
                    Height="{DynamicResource EmptyState.IconContainerSize}"
                    CornerRadius="48"
                    Background="{DynamicResource Brush.AppBg}">
                <Grid Width="{DynamicResource EmptyState.IconSize}"
                      Height="{DynamicResource EmptyState.IconSize}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Path Data="{StaticResource Icon.Book}"
                          Style="{DynamicResource IconBase}"
                          Stroke="{DynamicResource Brush.TextTertiary}"
                          StrokeThickness="1.5"
                          Stretch="Uniform"/>
                </Grid>
            </Border>
            <TextBlock Text="{DynamicResource Str_NoNotebooks}"
                       FontSize="{DynamicResource FontSize_Large}"
                       Foreground="{DynamicResource Brush.TextSecondary}"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
            <TextBlock Text="{DynamicResource Str_CreateFirstNotebook}"
                       FontSize="{DynamicResource FontSize_Small}"
                       Foreground="{DynamicResource Brush.TextTertiary}"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
            <Button Content="{DynamicResource Str_NewNotebook}"
                    Style="{DynamicResource TonalButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="NewNotebook_Click"/>
        </StackPanel>
    </Grid>
</Page>
